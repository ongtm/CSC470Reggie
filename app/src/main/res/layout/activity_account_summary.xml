<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="100dp">

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/account_summary_view_transactions"
        android:contentDescription="@string/accountSummaryViewTransactions"
        android:onClick="onClickViewTransactions"
        app:srcCompat="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="4dp"/>


    <TextView
        android:id="@+id/account_summary_accountnamelabel"
        android:text="@string/account_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@+id/account_summary_view_transactions"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/account_summary_accountname"
        android:text="@string/accountSummaryAccountName"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/account_summary_accountnamelabel"
        app:layout_constraintTop_toTopOf="@+id/account_summary_accountnamelabel"/>


    <TextView
        android:id="@+id/account_summary_accounttypelabel"
        android:text="@string/account_type"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/account_summary_accountname"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/account_summary_accounttype"
        android:text="@string/accountSummaryAccountType"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/account_summary_accounttypelabel"
        app:layout_constraintStart_toEndOf="@+id/account_summary_accounttypelabel"/>


    <TextView
        android:id="@+id/account_summary_accountcbalancelabel"
        android:text="@string/current_account_balance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/account_summary_accounttype"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/account_summary_accountcbalance"
        android:text="@string/accountSummaryCAccountBalance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/account_summary_accountcbalancelabel"
        app:layout_constraintStart_toEndOf="@+id/account_summary_accountcbalancelabel"/>


    <TextView
        android:id="@+id/account_summary_accountabalancelabel"
        android:text="@string/available_account_balance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/account_summary_accountcbalancelabel"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/account_summary_accountabalance"
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/account_summary_accountabalancelabel"
        app:layout_constraintStart_toEndOf="@+id/account_summary_accountabalancelabel"/>



    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/account_summary_deleteaccount"
        android:contentDescription="@string/accountSummaryDeleteAccount"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        app:layout_constraintTop_toTopOf="@+id/account_summary_accountabalance"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="4dp"/>


</android.support.constraint.ConstraintLayout>